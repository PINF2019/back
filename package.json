{
  "name": "@pinf2019/backend",
  "version": "0.0.1",
  "description": "",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Carlos Rodrigo Sanabria Flores",
    "email": "rodrigosanabria22@opinno.com"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "preinstall": "npx use-yarn",
    "build": "nest build",
    "release": "standard-version --no-verify",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:mongo": "docker-compose -p availability-tool -f .devcontainer/docker-compose.yml up -d mongo mongo-seeder",
    "down:mongo": "docker-compose -p availability-tool -f .devcontainer/docker-compose.yml down -v",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.9.0",
    "@typegoose/typegoose": "^6.1.2",
    "apollo-server-express": "^2.9.7",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "mongoose": "^5.7.10",
    "nestjs-typegoose": "^7.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "type-graphql": "^0.17.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@nestjs/cli": "^6.11.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.8.5",
    "@types/bcrypt": "^3.0.0",
    "@types/hapi__joi": "^16.0.3",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.21",
    "@types/mongoose": "^5.5.26",
    "@types/node": "^12.12.0",
    "@types/passport-jwt": "^3.0.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2"
  },
  "contributors": [],
  "engines": {
    "node": ">=12.13.x",
    "yarn": ">=1.19.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
